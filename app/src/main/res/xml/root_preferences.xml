<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_options_general">
        <DropDownPreference
            android:id="@+id/seachBooks_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="seachBooks"
            android:title="@string/options_buscarLibros" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/title_options_otros">
        <DropDownPreference
            android:id="@+id/idioma_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:defaultValue="1"
            android:entries="@array/lenguages"
            android:entryValues="@array/lenguages"
            android:key="lenguage"
            android:title="@string/options_idioma" />
        <DropDownPreference
            android:id="@+id/info_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:key="goToInfo"
            android:title="@string/options_mas_info" />
    </PreferenceCategory>

</PreferenceScreen>